# Smart-Fit-Agent Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smart_fit_agent
# Example: postgresql://user:pass@localhost:5432/dbname
# For production, use your actual database connection string

# AI Service Configuration
GEMINI_API_KEY=your_google_gemini_api_key_here
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
# Alternative key name for Google AI services

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
# Generate a strong random string for JWT token signing
# Example: openssl rand -base64 64

# Server Configuration
NODE_ENV=development
# Options: development, production, test

PORT=5000
# Port number for the server to listen on

# Image Generation Service (Optional)
IMAGE_API_KEY=your_image_generation_api_key_here
# If using external image generation services

# Email Service (Optional - for future email verification)
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
# If using Redis for caching

# File Upload Configuration (Optional)
MAX_FILE_SIZE=10485760
# Maximum file size in bytes (10MB)

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Comma-separated list of allowed origins

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
# Health check interval in milliseconds
